@model StudentPortalWeb.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" name="name" value="" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" name="email" value="" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" name="phone" value="" class="form-control" asp-for="Phone" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subcribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subcribed">Subcribed</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>